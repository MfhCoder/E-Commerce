@model E_Commerce.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Main content -->
    <section class="content">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Are you sure you want to delete this?</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-4">
                        <label>
                            @Html.DisplayNameFor(model => model.CategoryName)
                        </label>
                    </div>
                    <div class="col-xs-6">
                        <label>
                            @Html.DisplayFor(model => model.CategoryName)
                        </label>
                    </div>
                    <div class="col-xs-4">
                        <label> @Html.DisplayNameFor(model => model.Description)</label>
                    </div>
                    <div class="col-xs-6">
                        <label>  @Html.DisplayFor(model => model.Description)</label>
                    </div>

                </div>

            </div>
            <!-- /.box-body -->
            <div class="box-footer">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a href="@Url.Action("Index","Categories")" type="submit" class="btn btn-info pull-right">Back to List</a>

                    </div>
                }

            </div>
        </div>
    </section>