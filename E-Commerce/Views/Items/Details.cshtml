@model E_Commerce.Models.Items

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <h2>@Html.DisplayFor(model => model.Title)</h2>

    <div class="row">
        <div class="col-md-3">
            <img src="~/images/@Html.DisplayFor(model=>model.ItemImage)" class="img-responsive img-thumbnail center-block item-box" data-imagezoom="true" />
        </div>
        <div class="col-md-9 item-info">

            <h2>@Html.DisplayFor(model => model.Title)</h2>

            <p>@Html.DisplayFor(model => model.Description)</p>

            <ul class="list-unstyled">
                <li>
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (ViewBag.AvgRate >= i)
                        {
                            <span class="fa fa-star" style="color: #ff6600"></span>
                        }
                        else
                        {
                            <span class="fa fa-star-o" style="color: #ff6600"></span>
                        }
                    }
                <li>
                 <li>
                    <i class="fa fa-calendar fa-fw"></i>
                    <span>Added Date</span>: @Html.DisplayFor(model => model.AddedDate)
                </li>
                <li>
                    <i class="fa fa-money fa-fw"></i>
                    <span>Price</span>: @Html.DisplayFor(model => model.Price)
                </li>
                <li>
                    <i class="fa fa-tags fa-fw"></i>
                    <span>
                        Category
                    </span> : @Html.DisplayFor(model => model.Category.CategoryName)

                </li>
            </ul>
        </div>
    </div>

@Html.Partial("_AddReview");

@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
