@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <h2>Manage Roles</h2>

    <p>
        @Html.ActionLink("Create New", "Create", new { @class = "btn btn-success" })
    </p>

    <p>
        @Html.ActionLink("Manage Users Roles", "ManageUserRoles", new { @class = "btn btn-success" })
    </p>
    <table class="table table-striped table-hover">
        <tr class="main-table-fd">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-xs button btn-success" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-xs button btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-xs button btn-danger" })</td>
            </tr>
        }

    </table>
