@model IEnumerable<E_Commerce.Models.Items>

@{
    ViewBag.Title = "GetProductsByCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="container text-center">

    <h2 class="h1 text-primary">@ViewBag.categoryName Products</h2>
    <!-- price range -->
    <div class="row">
        <div class="panel panel-primary">
     <div class="panel-heading">
            <h3 class="panel-title">Shop By Price</h3>
        </div>
@using (Html.BeginForm("FilterByPrice", "Home", FormMethod.Get))
{
        <div class="panel-body">
            <div class="input-group">
                <span class="input-group-addon" id="sizing-addon2">$ Min</span>
                <input type="range" class="form-control" min="0" max="100" onchange="updateMinInput(this.value);">
                <input type="number" class="form-control" name="minPrice" id="minValue" min="0" maxlength="6" max="999999" value="00" size="6">
            </div>
            <br />
            <div class="input-group">
                <span class="input-group-addon" id="sizing-addon2">$ Max</span>
                <input type="range" class="form-control" min="0" max="100" onchange="updateMaxInput(this.value);">
                <input type="number" class="form-control" name="maxPrice" id="maxValue" min="0" maxlength="6" max="999999" value="00" size="6">    <br /><br />
            </div>
            <button class="btn btn-primary" type="submit">Filter</button>

        </div>

           
        }
</div>             </div>




    @foreach (var item in Model)

    {
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="thumbnail item-box">
                    <span class="price-tag">$@item.Price</span>
                    <div class="hovereffect">
                        <img class="img-responsive" src="/images/@item.ItemImage" alt="">
                        <div class="overlay">
                            <h2>@Html.DisplayFor(modelItem => item.Title)</h2>
                            @Html.ActionLink("Details", "Details", new { ItemId = item.Id }, new { @class = "info", @id = "details-btn" })
                        </div>
                    </div>
                    <div class="date">22/5/2018</div>
                </div>
            </div>
        </div>


    }
</section>

<script type="text/javascript">
    function updateMinInput(val) {
        document.getElementById('minValue').value = 00;
        document.getElementById('minValue').value = val * 10;
    }
    function updateMaxInput(val) {
        document.getElementById('maxValue').value = 00;
        document.getElementById('maxValue').value = val * 100;
    }
</script>
